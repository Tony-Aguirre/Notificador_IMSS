<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mx.com.notificador_imss">
    <!--Permisos agregados-->
    <uses-permission android:name="android.permission.INTERNET"/>     <!--Permiso del uso de internet-->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Notificador IMSS"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotificadorIMSS"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Supervisor"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Rasgos"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BaseDatos"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Firmas"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Credencial"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Documento"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pendientes"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
